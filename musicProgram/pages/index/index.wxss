/* pages/index/index.wxss */
/* 搜索框样式 */
.search{
    width: 100%;
    height: 80rpx;
    display: flex;
}
.search .searchIcon{
    margin: 5rpx;
    width: 80rpx;
    height: 80rpx;
    font-size: 50rpx;
    line-height: 80rpx;
    text-align: center;
    border-right: 1px solid rgb(204, 202, 202);
    /* background-color:blue; */
}
.search .inputContent{
    margin: 5rpx;
    flex:1;
    width: 100%;
    height: 100%;
    /* background-color:#bfa; */
}
/* 轮播图样式 */
.banner{
    width:100%;
    height: 300rpx;
}
.banner image{
    width: 100%;
    height: 300rpx;
}

/* 五个导航图标样式 */
.navContainer{
    display:flex;
    justify-content: space-between;
}
.navContainer .navItem{
    margin:20rpx;
    display:flex;
    flex-direction: column;
    text-align: center;
}
.navContainer .navItem text:first-child{
    width: 100rpx;
    height: 100rpx;
    background-color: rgb(212,60,51);
    text-align: center;
    line-height: 100rpx;
    border-radius: 50%;
    font-size: 36rpx;
    color:white
}
.navContainer .navItem text:last-child{
    margin-top:20rpx;
    font-size: 26rpx;
}

/* 推荐区域样式 */
.scroll{
    display: flex;
    height: 220rpx;
}
.re-content{
    display:flex;
    flex-direction: column;
    margin: 10rpx;
}
.re-content image{
    width: 150rpx;
    height: 150rpx;
    border-radius: 8rpx;
}
.re-content text{
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

/* 排行榜样式 */
.swiper{
    height: 440rpx;
}
.swiper-item{
    margin:10rpx;
    background-color: rgb(252, 249, 249);
}
.swiper-item .info{
    display:flex;
    align-items:center;
    margin-top: 20rpx;
}
.swiper-item .info image{
    width:100rpx;
    height: 100rpx;
    border-radius:10rpx;
}
.swiper-item .info text{
    font-size: 32rpx;
    margin-left: 50rpx;
}

