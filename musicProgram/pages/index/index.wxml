<!--pages/index/index.wxml-->
<!-- 轮播图 -->
<swiper class="banner" indicator-dots indicator-color="ivory" indicator-active-color="#d43c33" autoplay  circular>
    <swiper-item wx:for="{{banner}}" wx:key="bannerId">
    <image src="{{item.pic}}"></image>
    </swiper-item>
</swiper> 

<!-- 五个图标导航区域 -->
<view>
    <view class="navContainer">
       <view class="navItem">
       <text class=" iconfont icon-tuijian1"></text>
       <text>每日推荐</text>
       </view>
       <view class="navItem">
       <text class=" iconfont icon-gedan"></text>
       <text>歌单</text>
       </view>
       <view class="navItem">
       <text class=" iconfont icon-paixingbang"></text>
       <text>排行榜</text>
       </view>
       <view class="navItem">
       <text class=" iconfont icon-diantai"></text>
       <text>电台</text>
       </view>
       <view class="navItem">
       <text class=" iconfont icon-shipinzhibo"></text>
       <text>直播</text>
       </view>
    </view>

</view>

<!-- 推荐区域 -->
<nav-header title="推荐歌曲" nav="为你精心推荐"></nav-header>
<scroll-view class="scroll" enable-flex scroll-x> 
    <view wx:for="{{recommendMusic}}" wx:key="id" class="re-content">
    <image src="{{item.picUrl}}"></image>
    <text>{{item.name}}</text>
    </view>
</scroll-view>

<!-- 排行榜区域 -->
<nav-header title="排行榜" nav="最HOT歌手"></nav-header>
<swiper class="swiper" next-margin="40rpx" previous-margin="10rpx" circular>
    <swiper-item class="swiper-item" wx:for="{{hotArtists}}"wx:key="title">
        <text class="title">{{item.title}}</text>
        <view class="info" wx:for="{{item.hotArt}}" wx:key="id" wx:for-item="item2" wx:for-index="index2">
        <image src="{{item2.picUrl}}"></image>
        <text>{{index2+1}}</text>
        <text>{{item2.name}}</text>
        </view>
    </swiper-item>
</swiper>